using System;

public interface IPromotion
{
    double ApplyDiscount(decimal price);
}

public class BlackFriday : IPromotion
{
    public double ApplyDiscount(decimal price)
    {
        return (double)(price * 0.5M);
    }
}

public class Christmas : IPromotion
{
    public double ApplyDiscount(decimal price)
    {
        return (double)(price * 0.6M);
    }
}

public class SalesContext
{
    private IPromotion _strategy;

    public SalesContext(IPromotion strategy)
    {
        _strategy = strategy;
    }

    public double CalculatePriceAfterDiscount(decimal price)
    {
        return _strategy.ApplyDiscount(price);
    }
}

class Program
{
    static void Main(string[] args)
    {
        decimal originalPrice = 100M;

        // Black Friday sale
        IPromotion blackFridayStrategy = new BlackFriday();
        SalesContext blackFridaySale = new SalesContext(blackFridayStrategy);
        double priceAfterBlackFridaySale = blackFridaySale.CalculatePriceAfterDiscount(originalPrice);
        Console.WriteLine("Price after Black Friday sale: $" + priceAfterBlackFridaySale);

        // Christmas sale
        IPromotion christmasStrategy = new Christmas();
        SalesContext christmasSale = new SalesContext(christmasStrategy);
        double priceAfterChristmasSale = christmasSale.CalculatePriceAfterDiscount(originalPrice);
        Console.WriteLine("Price after Christmas sale: $" + priceAfterChristmasSale);

        Console.ReadLine();
    }
}
